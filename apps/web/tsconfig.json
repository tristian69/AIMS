{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["./src/components/*"],
            "@/lib/*": ["./src/lib/*"]
        },
        "types": ["node"]
    },
    "include": ["src"]
}